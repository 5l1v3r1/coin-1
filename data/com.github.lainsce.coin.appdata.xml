<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
    <id>com.github.lainsce.coin.desktop</id>
    <metadata_license>CC0</metadata_license>
    <project_license>GPL-3.0+</project_license>
    <name>Coin</name>
    <summary>Track the virtual currencies in real world currency value with this handy applet</summary>
    <description>
        <p>Never miss out on the value of a virtual currency with this handy applet</p>
        <ul>
            <li>Choose which currency and virtual currency to use for tracking</li>
            <li>Quit anytime with the shortcut Ctrl + Q</li>
            <li>Move the applet by dragging it from anywhere in the window</li>
            <li>Stays out of your way in the desktop</li>
        </ul>
    </description>
    <provides>
        <binary>com.github.lainsce.coin</binary>
    </provides>
    <developer_name>Lains</developer_name>
    <url type="homepage">https://github.com/lainsce/coin/</url>
    <url type="bugtracker">https://github.com/lainsce/coin/issues</url>
    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/lainsce/coin/master/data/shot.png</image>
        </screenshot>
    </screenshots>
    <releases>
      <release version="1.1.5" date="2017-09-07">
        <description>
          <p>Release: Money Makes The World Go Round</p>
          <ul>
            <li>Enable Coin for translators</li>
            <li>Add XAR coin.</li>
          </ul>
        </description>
      </release>
    </releases>
    <custom>
        <value key="x-appcenter-color-primary">#badbad</value>
        <value key="x-appcenter-color-primary-text">#212121</value>
    </custom>
</component>
